<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorPrimaryVariant">@color/back_primary</item>
        <item name="colorOnPrimary">@color/back_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
<!--        <item name="colorSecondaryVariant">@color/back_secondary</item>-->
<!--        <item name="colorOnSecondary">@color/back_secondary</item>-->
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/back_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/support_separator</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnErrorContainer">#A1FF3B30</item>
    </style>

    <style name="Switcher" parent="">
        ...
        <item name="colorOnSurface">@color/support_overlay</item>
        <item name="colorSecondary">@color/blue</item>
    </style>
    
    <style name="LargeTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textColorHint">@color/label_tertiary</item>
    </style>
    <style name="SubTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_tertiary</item>
    </style>
    <style name="DateSubTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="DeleteTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="AppBarTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>



    <style name="ToggleButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@drawable/selector_button_border_color</item>
        <item name="backgroundTint">@drawable/selector_button_tint_color</item>
        <item name="android:textColor">@drawable/selector_button_content_color</item>
        <item name="iconTint">@drawable/selector_button_content_color</item>
    </style>
</resources>