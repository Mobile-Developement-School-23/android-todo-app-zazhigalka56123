<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/back_primary</item>
        <item name="statusBarScrim">@color/label_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/support_separator</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnErrorContainer">#A1FF3B30</item>
    </style>

    <style name="Switcher" parent="">
        ...
        <item name="colorOnSurface">@color/support_overlay</item>
        <item name="colorSecondary">@color/blue</item>
    </style>
    
    <style name="LargeTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="AppBarTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>
</resources>